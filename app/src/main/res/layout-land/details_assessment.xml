<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="49dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="84dp"
        android:text="Title"
        android:textColor="#01051B"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/typeTextView"
        app:layout_constraintTop_toBottomOf="@+id/statusSpinner">
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="174dp">


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/performanceRadioBtn"
            android:layout_width="127dp"
            android:layout_height="37dp"
            android:text="Performance" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/objectiveRadioBtn"
            android:layout_width="127dp"
            android:layout_height="37dp"
            android:text="Objective"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="171dp" />

    </RadioGroup>

    <EditText
        android:id="@+id/assessmentTitleTxtBox"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Assessment Title"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="128dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="131dp"
        android:text="Status"
        android:textColor="#01051B"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="49dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="188dp"
        android:text="Type"
        android:textColor="#01051B"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/assessmentStartDate"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginStart="432dp"
        android:layout_marginLeft="432dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:inputType="date"
        android:onClick="startDateBtn"
        android:text="mm/dd/yyyy"
        android:textSize="12sp"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="49dp"
        android:layout_height="27dp"
        android:layout_marginStart="352dp"
        android:layout_marginLeft="352dp"
        android:layout_marginTop="164dp"
        android:text="Dates"
        android:textColor="#01051B"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/assessmentEndDate"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginStart="612dp"
        android:layout_marginLeft="612dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:inputType="date"
        android:onClick="endDateBtn"
        android:text="mm/dd/yyyy"
        android:textSize="12sp"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/assessmentEndCheckBox"
        android:layout_width="113dp"
        android:layout_height="48dp"
        android:layout_marginStart="628dp"
        android:layout_marginLeft="628dp"
        android:layout_marginTop="96dp"
        android:text="Assessment End"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/assessmentStartCheckBox"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginStart="472dp"
        android:layout_marginLeft="472dp"
        android:layout_marginTop="96dp"
        android:text="Assessment Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reminderTextView"
        android:layout_width="78dp"
        android:layout_height="26dp"
        android:layout_marginStart="352dp"
        android:layout_marginLeft="352dp"
        android:layout_marginTop="96dp"
        android:text="Reminders"
        android:textColor="#01051B"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/untilTextView"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginStart="564dp"
        android:layout_marginLeft="564dp"
        android:layout_marginTop="168dp"
        android:text="until"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/assessmentDetailsLabel"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:background="#0A1247"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:autoSizeTextType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Assess. Details"

        app:titleTextColor="#FFFFFF" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="96dp"
        android:layout_height="42dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="150dp"
        android:background="#FFFFFF"
        android:onClick="saveBtn"
        android:text="Save"
        app:backgroundTint="#1D2A71"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="96dp"
        android:layout_height="42dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="150dp"
        android:background="#FFFFFF"
        android:onClick="cancelBtn"
        android:text="Cancel"
        app:backgroundTint="#1D2A71"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="150dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/ic_delete"
        android:onClick="deleteBtn"
        app:backgroundTint="#E91E63"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345"
        tools:ignore="OnClick" />


</androidx.constraintlayout.widget.ConstraintLayout>